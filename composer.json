  "keywords": ["framework", "mvc", "hmvc"],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Zech Walden",
      "email": "zech@zewadesign.com"
    },
    {
      "name": "Josh Houghtelin",
